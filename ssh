#!/bin/bash
# Simple ssh wrapper, in order to access my home servers from my laptop
# when I am away from home

SSH="/usr/bin/ssh"
ADDR="home.tampakrap.gr -p"

if [[ $1 == 'beatbox' ]] || [[ $1 = 'underground' ]]; then
	ping $1 -c 4 >/dev/null 2>&1
	STATUS=`echo $?`
	if [[ $STATUS == 1 ]]; then
		case "$1" in
			'beatbox') $SSH $ADDR 2581 ;;
			'underground') $SSH $ADDR 2582 ;;
		esac
	fi
else
	$SSH $@
fi
